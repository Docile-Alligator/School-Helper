<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_exam_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:drawableLeft="@drawable/ic_school_black_24dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_school_black_24dp"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_exam_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_subject_black_24dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_subject_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/item_exam_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:drawableStart="@drawable/ic_event_note_black_24dp"
            android:drawableLeft="@drawable/ic_event_note_black_24dp"
            android:drawablePadding="8dp" />

        <TextView
            android:id="@+id/item_exam_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_schedule_black_24dp"
            android:drawableLeft="@drawable/ic_schedule_black_24dp"
            android:drawablePadding="8dp" />

    </LinearLayout>

</LinearLayout>